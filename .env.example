# Smart Saw Control System - Environment Variables Template
# Copy this file to .env and fill in your values

# PostgreSQL Database (Optional - only if using remote database)
POSTGRES_HOST=192.168.1.200
POSTGRES_PORT=5432
POSTGRES_DB=smartsaw
POSTGRES_USER=smartsaw_user
POSTGRES_PASSWORD=your_secure_password_here

# ThingsBoard IoT Platform
TB_ACCESS_TOKEN=your_thingsboard_device_token_here
TB_MQTT_BROKER=mqtt.thingsboard.cloud

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Modbus PLC (can override config.yaml)
# MODBUS_HOST=192.168.1.100
# MODBUS_PORT=502
